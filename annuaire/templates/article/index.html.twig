{% extends "base.html.twig" %}

{% block body %}

<main class="container">
    <h1>Liste des articles</h1>
    <section class="row">
        {% for article in articles %}
            <article class="col-4">
                <h2>{{ article.titre }}</h2>
                {% if article.image %}
                    <img src="{{ asset("upload/" ~  article.image.url) }}" alt="" class="img-fluid">
                {% else %}
                    <img src="https://via.placeholder.com/400x200" alt="" class="img-fluid">
                {% endif %}
                <p>{{ article.contenu }}</p>
                <p>écrit par : {{ article.auteur.nom }}</p>
                <p>associé à la catégorie :
                
                 {% if article.categorie %} 
                    <span class='badge bg-success'>{{ article.categorie.libelle }}</span>
                 {% else %}
                    <span class="badge bg-danger">pas de catégorie</span>
                 {% endif %} 

                </p>
                <div>
                    <a href="{{ path("article_single" , {"id" : article.id }) }}"  class="btn btn-outline-dark btn-sm">Laisser un commentaire</a>
                </div>
            </article>
        {% endfor %}
    </section>
</main>

{% endblock %}